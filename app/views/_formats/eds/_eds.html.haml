/ EDS - ARTICLES
/ container for a single doc
/ _formats/eds/_eds.html.haml

- # bookmark = Array(document.src['BookMark']).first
- bookmark = 'foo'
.result.document.article_list{item_id: bookmark}

  .row
    .title.col-sm-12
      .item_anchor
        = render partial: '/saved_lists/item_select_checkbox', locals: {item_id: bookmark, counter: counter ||= 0}
      .item_select_allowance= eds_link_to_article document


  .details
    - if document.eds_authors.any?
      = add_row('Author', eds_get_article_authors(document), html_safe: true)
    = add_row('Citation', eds_get_article_citation(document))
    = add_row('Format', eds_get_article_type(document))
    - if Rails.env == 'xdevelopment'
      = eds_dump(document).html_safe
    


